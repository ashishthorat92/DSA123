#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX 100 // max length of a line

// Node structure
typedef struct Node {
    char line[MAX];
    struct Node *next;
} Node;

Node *head = NULL;

// Create new node
Node* createNode(char text[]) {
    Node* newNode = (Node*)malloc(sizeof(Node));
    strcpy(newNode->line, text);
    newNode->next = NULL;
    return newNode;
}

// Insert at front
void insertFront(char text[]) {
    Node* newNode = createNode(text);
    newNode->next = head;
    head = newNode;
}

// Insert at end
void insertEnd(char text[]) {
    Node* newNode = createNode(text);
    if (head == NULL) {
        head = newNode;
    } else {
        Node* temp = head;
        while (temp->next != NULL)
            temp = temp->next;
        temp->next = newNode;
    }
}

// Insert at position
void insertAtPosition(char text[], int pos) {
    if (pos <= 1) {
        insertFront(text);
        return;
    }
    Node* newNode = createNode(text);
    Node* temp = head;
    for (int i = 1; i < pos - 1 && temp != NULL; i++)
        temp = temp->next;

    if (temp == NULL) {
        printf("Position out of range! Inserting at end.\n");
        insertEnd(text);
    } else {
        newNode->next = temp->next;
        temp->next = newNode;
    }
}

// Delete front
void deleteFront() {
    if (head == NULL) {
        printf("List is empty!\n");
        return;
    }
    Node* temp = head;
    head = head->next;
    printf("Deleted line: %s\n", temp->line);
    free(temp);
}

// Delete end
void deleteEnd() {
    if (head == NULL) {
        printf("List is empty!\n");
        return;
    }
    if (head->next == NULL) {
        printf("Deleted line: %s\n", head->line);
        free(head);
        head = NULL;
        return;
    }
    Node* temp = head;
    while (temp->next->next != NULL)
        temp = temp->next;
    printf("Deleted line: %s\n", temp->next->line);
    free(temp->next);
    temp->next = NULL;
}

// Delete at position
void deleteAtPosition(int pos) {
    if (head == NULL) {
        printf("List is empty!\n");
        return;
    }
    if (pos == 1) {
        deleteFront();
        return;
    }
    Node* temp = head;
    for (int i = 1; i < pos - 1 && temp->next != NULL; i++)
        temp = temp->next;

    if (temp->next == NULL) {
        printf("Position out of range!\n");
    } else {
        Node* del = temp->next;
        printf("Deleted line: %s\n", del->line);
        temp->next = del->next;
        free(del);
    }
}

// Display list normally
void display() {
    if (head == NULL) {
        printf("Text is empty!\n");
        return;
    }
    Node* temp = head;
    printf("\nText:\n");
    while (temp != NULL) {
        printf("%s\n", temp->line);
        temp = temp->next;
    }
}

// Recursive display reverse (without changing list)
void displayReverseRec(Node* node) {
    if (node == NULL)
        return;
    displayReverseRec(node->next);
    printf("%s\n", node->line);
}

void displayReverse() {
    if (head == NULL) {
        printf("Text is empty!\n");
        return;
    }
    printf("\nText in reverse order:\n");
    displayReverseRec(head);
}

// Reverse the list (permanently)
void reverseList() {
    Node* prev = NULL;
    Node* curr = head;
    Node* next = NULL;
    while (curr != NULL) {
        next = curr->next;
        curr->next = prev;
        prev = curr;
        curr = next;
    }
    head = prev;
    printf("List reversed successfully.\n");
}

// Menu
int main() {
    int choice, pos;
    char text[MAX];

    do {
        printf("\n--- Text Editor Menu ---\n");
        printf("1. Insert at Front\n");
        printf("2. Insert at End\n");
        printf("3. Insert at Position\n");
        printf("4. Delete Front\n");
        printf("5. Delete End\n");
        printf("6. Delete at Position\n");
        printf("7. Display\n");
        printf("8. Display Reverse (without modifying)\n");
        printf("9. Reverse List (permanently)\n");
        printf("10. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);
        getchar(); // consume newline

        switch (choice) {
            case 1:
                printf("Enter line of text: ");
                fgets(text, MAX, stdin);
                text[strcspn(text, "\n")] = '\0';
                insertFront(text);
                break;

            case 2:
                printf("Enter line of text: ");
                fgets(text, MAX, stdin);
                text[strcspn(text, "\n")] = '\0';
                insertEnd(text);
                break;

            case 3:
                printf("Enter position: ");
                scanf("%d", &pos);
                getchar();
                printf("Enter line of text: ");
                fgets(text, MAX, stdin);
                text[strcspn(text, "\n")] = '\0';
                insertAtPosition(text, pos);
                break;

            case 4:
                deleteFront();
                break;

            case 5:
                deleteEnd();
                break;

            case 6:
                printf("Enter position: ");
                scanf("%d", &pos);
                deleteAtPosition(pos);
                break;

            case 7:
                display();
                break;

            case 8:
                displayReverse();
                break;

            case 9:
                reverseList();
                break;

            case 10:
                printf("Exiting...\n");
                break;

            default:
                printf("Invalid choice!\n");
        }
    } while (choice != 10);

    return 0;
}
